command=/usr/libexec/i3blocks/$BLOCK_NAME
separator_block_width=15
color=#F3F4F5
markup=none

[volume-pulseaudio]
label=
command={{ I3BLOCKS_BASE_PATH }}volume
interval=1
signal=10

[cpu]
label=
command={{ I3BLOCKS_BASE_PATH }}cpu_usage
interval=15

[temperature]
label=
command={{ I3BLOCKS_BASE_PATH }}temperature
interval=15

[ram]
label=
command={{ I3BLOCKS_BASE_PATH }}memory | grep -E -o '[0-9].[0-9]?G'
interval=30

[disk-home]
label=
command=df -h -P -l $HOME | awk '/\/.*/ { print $3; exit 0 }'
interval=30

[battery]
label=
command=/usr/lib/i3blocks/battery
interval=10

[time]
label=
command=date '+%a, %d %b %H:%M'
interval=5
